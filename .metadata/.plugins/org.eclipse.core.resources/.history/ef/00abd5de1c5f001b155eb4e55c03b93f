package loops;
import java.util.Scanner;
public class Pattern9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		System.out.println("*");
		for(int i=2;i<num-1;i++) {
			System.out.print("* ");
			for(int j=1;j<=i-2;i++) {
				System.out.print("  ");
			}
			System.out.print("*");
		}
		for(int i=1;i<=num;i++) {
			System.out.print("* ");
		}

	}

}
