package loops;
import java.util.Scanner;
//*
//* *
//*   *
//*     *
//*********
public class Pattern9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		for(int i=1;i<=num;i++) {
			if(i>1 && i<num) {
				System.out.println("* ");
				for(int j=0;j<=i-2;j++) {
					System.out.println("  ");
				}
				System.out.println("* ");
			}
			else {
				for(int j=1;j<=num;j++) {
					System.out.println("* ");
				}
			}
		}

	}

}
