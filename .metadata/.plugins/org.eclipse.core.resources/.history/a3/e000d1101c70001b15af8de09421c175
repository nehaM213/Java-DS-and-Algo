package assignment1;

import java.util.Scanner;

public class Ass7 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		for(int i=1;i<=num;i++) {
			for(int j=1;j<=num-i;j++) {
				System.out.print(" ");
			}
			System.out.print(i);
			for(int j=2;j<=i+(i-1);j++) {
				for(int p=1;p<j;p++) {
					System.out.print("0");
				}
				System.out.println();
				
//				System.out.print(i);
			}
			System.out.println();
		}
	}

}
