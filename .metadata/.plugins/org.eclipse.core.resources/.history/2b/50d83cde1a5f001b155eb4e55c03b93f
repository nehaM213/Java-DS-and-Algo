package loops;
import java.util.Scanner;
public class Pattern9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		for(int i=1;i<=num;i++) {
			if(i<=2) {
				for(int j=1;j<=i;j++) {
					System.out.print("* ");
				}
			}
			if(i>=3 && i<num) {
				System.out.print("* ");
				for(int j=2;j<i;j++) {
					System.out.print("  ");
				}
				System.out.print("*");
			}
			if(i==num){
				for(int j=1;j<=i;j++) {
					System.out.print("* ");
			}
			}
			System.out.println();
			
		}

	}

}
