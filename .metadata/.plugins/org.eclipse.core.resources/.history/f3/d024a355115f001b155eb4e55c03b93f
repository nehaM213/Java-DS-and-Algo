package loops;
import java.util.Scanner;
public class Pattern8 {
//*
//*  *
//*  *  *
//*  *  *  *
//*  *  *
//*  *
//*
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		int rows=2*num-1;
		for(int i=1;i<=rows;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print("*  ");
				
			}
			System.out.println();
		}
	}

}
